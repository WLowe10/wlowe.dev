{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["dom", "esnext"],
		"jsx": "react-jsx",
		"module": "esnext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "./src",
		"paths": {
			"@global/*": ["./global/*"],
			"@pages/*": ["./pages/*"],
			"@root/*": ["./root/*"],
			"@features/*": ["./features/*"],
			"@seo/*": ["./seo/*"],
			"@components/*": ["./components/*"]
		}
	},
	"include": [
		"./src/**/*",
		"./gatsby-node.ts",
		"./gatsby-config.ts",
		"./plugins/**/*"
	]
}
